<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViewDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
    </style>

    <style name="Theme.FullScreenThemeActivity" parent="Theme.ViewDemo">

        <item name="android:windowFullscreen">true</item>

    </style>


    <style name="switchstyle" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#0000ff</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="customRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_custom_bg</item>
        <item name="android:maxHeight">80dp</item>
        <item name="android:minHeight">80dp</item>
    </style>

    <style name="customRatingBar2" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_custom2_bg</item>
        <item name="android:maxHeight">36dp</item>
        <item name="android:minHeight">36dp</item>
    </style>

</resources>