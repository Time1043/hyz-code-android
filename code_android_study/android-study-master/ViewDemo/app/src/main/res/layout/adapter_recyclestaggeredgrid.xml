<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/grid_item_bg"
    tools:ignore="HardcodedText"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/grid8"
        android:scaleType="fitXY"
        android:id="@+id/ad_recyclestaggeredgrid_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_marginBottom="@dimen/grid_image_radius"
        android:id="@+id/ad_recyclestaggeredgrid_number"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:gravity="center_vertical"
        android:background="#44000000"
        android:paddingLeft="6dp"
        android:text="5859"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@id/ad_recyclestaggeredgrid_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:background="#ffffff"
        android:paddingLeft="6dp"
        android:id="@+id/ad_recyclestaggeredgrid_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="2"
        android:text="这是一个标题内容"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ad_recyclestaggeredgrid_number" />


    <TextView
        android:id="@+id/ad_recyclestaggeredgrid_upname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="4dp"
        android:paddingLeft="6dp"
        android:text="姓名"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ad_recyclestaggeredgrid_more"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ad_recyclestaggeredgrid_content" />


    <ImageView
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginLeft="6dp"
        android:id="@+id/ad_recyclestaggeredgrid_more"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/more"
        app:layout_constraintTop_toTopOf="@id/ad_recyclestaggeredgrid_upname"
        app:layout_constraintBottom_toBottomOf="@id/ad_recyclestaggeredgrid_upname"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>