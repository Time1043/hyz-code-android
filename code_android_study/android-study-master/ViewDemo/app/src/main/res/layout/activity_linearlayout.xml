<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cdcdcd"
    >
    <TextView
        android:padding="10dp"
        android:layout_gravity="left"
        android:textSize="20sp"
        android:textColor="#ff0000"
        android:text="水平方向LinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:dividerPadding="2dp"
        android:showDividers="middle"
        android:divider="@drawable/divider_line_v"
        android:background="#cdcdcd"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="20sp"
            android:background="#fff000"
            android:text="文本1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20sp"
            android:background="#0ffff0"
            android:text="文本2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20sp"
            android:background="#09a000"
            android:text="文本3"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>


    <TextView
        android:padding="10dp"
        android:layout_gravity="left"
        android:textSize="20sp"
        android:textColor="#ff0000"
        android:text="垂直方向LinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:showDividers="middle"
        android:divider="@drawable/divider_line_h"
        android:background="#cdcdcd"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:background="#fff000"
            android:text="文本1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:background="#0ffff0"
            android:text="文本2"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:background="#09a000"
            android:text="文本3"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:layout_gravity="right"
            android:text="测试LinearLayoutziview的"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>