<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f3eff5"
    >
    <TextView
        android:background="#f46d43"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:text="高级列表RecyclerView（四）"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/ac_recyclerview4_reset"
            android:textColor="#ffffff"
            android:layout_margin="4dp"
            android:textSize="16sp"
            android:text="重置"
            android:background="#1296DB"
            android:layout_width="48dp"
            android:layout_height="30dp"/>
        <Button
            android:id="@+id/ac_recyclerview4_notify_all"
            android:textColor="#ffffff"
            android:layout_margin="4dp"
            android:textSize="16sp"
            android:text="全部刷新"
            android:background="#1296DB"
            android:layout_width="90dp"
            android:layout_height="30dp"/>
        <Button
            android:id="@+id/ac_recyclerview4_notify_2"
            android:textColor="#ffffff"
            android:layout_margin="4dp"
            android:textSize="16sp"
            android:text="刷新第2条"
            android:background="#1296DB"
            android:layout_width="90dp"
            android:layout_height="30dp"/>
        <Button
            android:id="@+id/ac_recyclerview4_notify_234"
            android:textColor="#ffffff"
            android:layout_margin="4dp"
            android:textSize="16sp"
            android:text="刷新第2,3,4条"
            android:background="#1296DB"
            android:layout_width="120dp"
            android:layout_height="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/ac_recyclerview4_payloadnotify_2"
            android:textColor="#ffffff"
            android:layout_margin="4dp"
            android:textSize="16sp"
            android:text="局部刷新第2条"
            android:background="#1296DB"
            android:layout_width="120dp"
            android:layout_height="30dp"/>
        <Button
            android:id="@+id/ac_recyclerview4_payloadnotify_234"
            android:textColor="#ffffff"
            android:layout_margin="4dp"
            android:textSize="16sp"
            android:text="局部刷新第2,3,4条"
            android:background="#1296DB"
            android:layout_width="150dp"
            android:layout_height="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/ac_recyclerview4_insert_1_1"
            android:textColor="#ffffff"
            android:layout_margin="4dp"
            android:textSize="16sp"
            android:text="位置1插入1条"
            android:background="#1296DB"
            android:layout_width="120dp"
            android:layout_height="30dp"/>
        <Button
            android:id="@+id/ac_recyclerview4_insert_3_2"
            android:textColor="#ffffff"
            android:layout_margin="4dp"
            android:textSize="16sp"
            android:text="位置3插入2条"
            android:background="#1296DB"
            android:layout_width="120dp"
            android:layout_height="30dp"/>

        <Button
            android:id="@+id/ac_recyclerview4_move_4_2"
            android:textColor="#ffffff"
            android:layout_margin="4dp"
            android:textSize="16sp"
            android:text="4移动到2"
            android:background="#1296DB"
            android:layout_width="120dp"
            android:layout_height="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/ac_recyclerview4_remove_2"
            android:textColor="#ffffff"
            android:layout_margin="4dp"
            android:textSize="16sp"
            android:text="删除第2条"
            android:background="#1296DB"
            android:layout_width="120dp"
            android:layout_height="30dp"/>
        <Button
            android:id="@+id/ac_recyclerview4_remove_234"
            android:textColor="#ffffff"
            android:layout_margin="4dp"
            android:textSize="16sp"
            android:text="删除2,3,4条"
            android:background="#1296DB"
            android:layout_width="120dp"
            android:layout_height="30dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:background="#cccccc"
        android:id="@+id/ac_recyclerview4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>